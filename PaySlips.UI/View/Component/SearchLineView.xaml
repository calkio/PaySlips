<UserControl x:Class="PaySlips.UI.View.Component.SearchLineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaySlips.UI.View.Component"
             mc:Ignorable="d" 
>
    <Grid>

        <Grid Height="40" Width="300">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="0.4*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <Border Background="#E0E0E0" Grid.ColumnSpan="3" CornerRadius="4" BorderThickness="1" BorderBrush="#005FA8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5" Direction="275" Color="Black" Opacity="0.3"/>
                </Border.Effect>
            </Border>
            <TextBox Grid.Column="3" 
             Background="Transparent" 
             BorderBrush="Transparent" 
             Text="{Binding SearchText}"
             Style="{StaticResource TextBoxFileDirectoryStyle}" 
             VerticalAlignment="Center"
             ></TextBox>
            <Image Source="/Media/img/search_directory.png" VerticalAlignment="Center" Height="30"/>
            <Image Source="/Media/img/Line_directory.png" Grid.Column="1" Height="30" VerticalAlignment="Center"/>
        </Grid>


    </Grid>
</UserControl>
