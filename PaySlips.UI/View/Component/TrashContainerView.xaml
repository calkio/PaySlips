<UserControl x:Class="PaySlips.UI.View.Component.TrashContainerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaySlips.UI.View.Component"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.015*"/>
            <ColumnDefinition Width="0.97*"/>
            <ColumnDefinition Width="0.015*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.87*"/>
                <RowDefinition Height="0.13*"/>
            </Grid.RowDefinitions>
            <ContentPresenter Content="{Binding SearchLine}"/>
            <Grid/>
            <Grid Grid.Row="1" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.055*"/>
                    <ColumnDefinition Width="0.26*"/>
                    <ColumnDefinition Width="0.055*"/>
                    <ColumnDefinition Width="0.26*"/>
                    <ColumnDefinition Width="0.055*"/>
                    <ColumnDefinition Width="0.26*"/>
                    <ColumnDefinition Width="0.055*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Button" Grid.Column="1"/>
                <Button Content="Button" Grid.Column="3"/>
                <Button Content="Button" Grid.Column="5"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
