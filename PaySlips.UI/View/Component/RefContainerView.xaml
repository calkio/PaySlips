<UserControl x:Class="PaySlips.UI.View.Component.RefContainerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaySlips.UI.View.Component"
             mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.03*"/>
            <RowDefinition Height="0.97*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.035*"/>
            <ColumnDefinition Width="0.93*"/>
            <ColumnDefinition Width="0.035*"/>
        </Grid.ColumnDefinitions>
        <Grid Style="{StaticResource GridStyle}" Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.06*"/>
                <RowDefinition Height="0.94*"/>
            </Grid.RowDefinitions>
            <Label Content="{Binding LabelInfo}" Style="{StaticResource RefLabel}"/>
            <ScrollViewer Grid.Row="1" Style="{StaticResource BeautifulScrollViewerStyle}" >
                <TextBlock Text="{Binding ProgramInfo}" Style="{StaticResource TextBlock}"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
