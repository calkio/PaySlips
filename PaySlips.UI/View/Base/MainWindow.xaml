<Window x:Class="PaySlips.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaySlips.UI"
        xmlns:views="clr-namespace:PaySlips.UI.View"
        xmlns:vm="clr-namespace:PaySlips.UI.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>

        <DataTemplate DataType="{x:Type vm:ExampleVM}">
            <views:Example/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ExampleVM2}">
            <views:Example2/>
        </DataTemplate>

    </Window.Resources>

    <ContentPresenter Content="{Binding Content}"/>
</Window>
