<UserControl x:Class="PaySlips.UI.View.Menu.Base.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaySlips.UI.View.Menu.Base"
             mc:Ignorable="d" 
             d:DesignHeight="1025" d:DesignWidth="339">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.107*"/>
            <RowDefinition Height="0.055*"/>
            <RowDefinition Height="0.107*"/>
            <RowDefinition Height="0.055*"/>
            <RowDefinition Height="0.107*"/>
            <RowDefinition Height="0.055*"/>
            <RowDefinition Height="0.107*"/>
            <RowDefinition Height="0.055*"/>
            <RowDefinition Height="0.107*"/>
            <RowDefinition Height="0.37*"/>
        </Grid.RowDefinitions>
        
        <Button Content="Главная" Grid.Row="0"
                Command="{Binding ShowMainView}"/>

        <Button Content="Расчетные листы" Grid.Row="2"
                Command="{Binding ShowPayslipsView}"/>

        <Button Content="Архив" Grid.Row="4"
                Command="{Binding ShowArchiveView}"/>

        <Button Content="Шаблоны" Grid.Row="6"
                Command="{Binding ShowTemplatesView}"/>

        <Button Content="Справка" Grid.Row="8"
                Command="{Binding ShowReferenceView}"/>

    </Grid>
</UserControl>
