<UserControl x:Class="PaySlips.UI.View.Workspace.Main.DownloadCreatesVIew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaySlips.UI.View.Workspace.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Source="{Binding Source}"
                       Stretch="Fill"/>

        <Grid>
                
            <Grid.RowDefinitions>
                <RowDefinition Height="0.183*"/>
                <RowDefinition Height="0.577*"/>
                <RowDefinition Height="0.239*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" 
                       Content="Загрузить" 
                       Style="{StaticResource HLabel}"/>
            </Grid>

            <Grid Grid.Row="1">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.04*"/>
                    <ColumnDefinition Width="0.372*"/>
                    <ColumnDefinition Width="0.173*"/>
                    <ColumnDefinition Width="0.372*"/>
                    <ColumnDefinition Width="0.04*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.121*"/>
                    <RowDefinition Height="0.248*"/>
                    <RowDefinition Height="0.176*"/>
                    <RowDefinition Height="0.248*"/>
                    <RowDefinition Height="0.205*"/>
                </Grid.RowDefinitions>

                <Button Content="Производственный&#10;календарь"
                        Command="{Binding DownloadСalendar}"
                        Style="{StaticResource DButton}"
                        Grid.Row="1" Grid.Column="1"/>

                <Button Content="Нагрузку"
                        Command="{Binding DownloadСharge}"
                        Style="{StaticResource DButton}"
                        Grid.Row="1" Grid.Column="3"/>

                <Button Content="Расписание&#10;преподавателей"
                        Command="{Binding DownloadScheduler}"
                        Style="{StaticResource DButton}"
                        Grid.Row="3" Grid.Column="1"/>

                <Button Content="Справочник&#10;преподавателей"
                        Command="{Binding DownloadHandbook}"
                        Style="{StaticResource DButton}"
                        Grid.Row="3" Grid.Column="3"/>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
